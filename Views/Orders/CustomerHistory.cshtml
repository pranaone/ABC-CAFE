@using CafateriaSystem.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<Order>


        <div class="row" style="min-height:40px; margin:0; padding:0; background-color: rgba(242, 242, 242,0.5)">
            <div class="col col-md-2" style="text-align:center; font-size: larger; font-family: Arial, Helvetica, sans-serif; border: 1px solid black; border-right:0;">
                <b>Order No</b>
            </div>
            <div class="col col-md-2" style="text-align:center; font-size: larger; font-family: Arial, Helvetica, sans-serif; border: 1px solid black;">
                <b>Order Date</b>
            </div>
            <div class="col col-md-4" style="text-align:center; font-size: larger; font-family: Arial, Helvetica, sans-serif; border: 1px solid black;">
                <b>Order Items</b>
            </div>
            <div class="col col-md-2 " style="font-size: larger; font-family: Arial, Helvetica, sans-serif; text-align: center; border: 1px solid black; border-left:0px;">
                <b>Status</b>
            </div>

        </div>

        @foreach (var item in Model)
        {
            <div class="row" style="min-height:40px; margin:0; padding:0; background-color: rgba(242, 242, 242,0.5); border:1px solid black;">
                <div class="col col-md-2" style=" text-align:center; font-size: larger; font-family: Arial, Helvetica, sans-serif; border-right:1px solid black; border-bottom:1px solid black;">
                    @item.order_id
                </div>
                <div class="col col-md-2 " style="font-size: larger; font-family: Arial, Helvetica, sans-serif; text-align: center; border-right:1px solid black; border-bottom:1px solid black;">
                    @item.order_date
                </div>
                <div class="col col-md-4 " style="font-size: larger; font-family: Arial, Helvetica, sans-serif; text-align: center; border-right:1px solid black; border-bottom:1px solid black;">
                    @Html.Action("OrderDetailListPartial", "OrderDetails", new { id = item.order_id })
                </div>
                <div class="col col-md-2 " style="font-size: larger; font-family: Arial, Helvetica, sans-serif; text-align: center; border-right:1px solid black; border-bottom:1px solid black;">
                    @item.order_status
                </div>
                <div class="col col-md-2 " style="font-size: larger; font-family: Arial, Helvetica, sans-serif; text-align: center; border-right:1px solid black; border-bottom:1px solid black;">
                   @Html.ActionLink("Payment Details","CustomerPaymentDetails","Payments", new { id = item.order_id }, null)
                </div>
            </div>

        }


        <hr />

        <div class="pagination d-flex justify-content-center text-white" id="MenuPageination">
            @Html.PagedListPager(Model, page => Url.Action("UserDashboard", new { page = page }))
        </div>

        <hr />
