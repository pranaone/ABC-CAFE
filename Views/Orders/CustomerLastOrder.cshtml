@model CafateriaSystem.Models.Order

@if (Model != null)
{
    <div class="col-sm-11 col-md-8" style=" text-align:left; font-size: larger; font-family: Arial, Helvetica, sans-serif; border: 1px solid black;">
        <b>Current Order Details</b>
        <br />
        <b>Order No :</b>  @Html.DisplayFor(model => model.order_id)
        <br />
        <b>Method of Delivery :</b> @Html.DisplayFor(model => model.deliver_method)
        <br />
    </div>
    <div class="col-sm-1 col-md-4 " style="font-size: larger; font-family: Arial, Helvetica, sans-serif; text-align: center; border: 1px solid black; border-left:0px;">
        <hr />
        <b>Status : </b>
        <label style="color:darkred;"><b> @Html.DisplayFor(model => model.order_status) </b></label>
        <br />
        <hr />
        @Html.ActionLink("Cancel Order", "CancelOrder", "Orders", new { id = Model.order_id }, new { onclick = "return confirm ('Are you sure you want to cancel your order?');" })
        <hr />
    </div>
}


