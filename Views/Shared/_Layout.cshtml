<!DOCTYPE html>
<html style="height:100%; width:100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="height:100%; width:100%; background-image:url(../../Content/wallpaper.jpg); background-position:center;">
    <header class="container fixed-top" id="NavigationBar">
        <div class="container" style="min-width:100%;">
            <div class="row" id="BrandImageContainer">
                <img src="~/Content/BrandLogo.png" id="HeaderImage" />
            </div>
            <div class="row" id="NavigationButtons">
                <a class="col-3 text-center nav-item nav-link" href="@Url.Action("Index", "Home")" style="border-right:2px solid #FF7700;"> Home<span class="sr-only">(current)</span></a>
                <a class="col-3 text-center nav-item nav-link" href="@Url.Action("Index", "Menus")" style="border-right:2px solid #FF7700;">Menu</a>
                @if (Session["UserName"] == null)
                {
                    <a class="col-3 text-center nav-item nav-link" href="@Url.Action("Register", "Users")" style="border-right:2px solid #FF7700;">Register</a>
                    <a class="col-3 text-center nav-item nav-link" href="@Url.Action("Login", "Users")">Login</a>
                }
                else
                {
                    <a class="col-6 text-center nav-item nav-link" href="@Url.Action("UserDashboard", "Users")">Personal Dashboard</a>
                   
                }

            </div>
        </div>
    </header>


    <div class="container body-content" style="min-height:100%; min-width:75%; margin-top:50px; padding:30px; margin-left:auto; margin-right:auto;">
        @RenderBody()
    </div>

    <footer>
        <div class="container" style="min-width:100%;">
            <div class="row" id="FooterButtons">
                <a class="col-4" href="@Url.Action("About", "Home")" style="border-right:0px; border-left:0px; vertical-align:middle;">About Us</a>
                <a class="col-4" href="@Url.Action("Contact", "Home")" style="border-right:0px;">Contact Us</a>
                <a class="col-4" href="@Url.Action("Location","Home")" style="border-right:0px;">Location</a>
                <div class="container row" id="CopyrightRow"> Copyright &copy 2019 ABC Cafeteria - All Rights Reserved </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    #NavigationBar {
        padding: 0px;
        margin-bottom: 50px;
        margin-left: auto;
        margin-right: auto;
        min-width: 100%;
    }

    #HeaderImage {
        max-height: 150px;
        max-width: 300px;
        margin-left: auto;
        margin-right: auto;
    }

    #BrandImageContainer {
        background-image: url(../../Content/headerBackground.jpg);
        background-size: cover;
        background-color: white;
        border: 2px solid white;
        border-bottom: 0px;
    }

    #NavigationButtons {
        border-width: 2px;
        border-style: solid;
        border-color: #FF7700;
        background-image: url(../../Content/ButtonBackground.jpg);
    }

        #NavigationButtons a {
            font-size: 15px;
            font-size-adjust: 0.28;
            font-family: Arial, Helvetica, sans-serif;
            padding: 2px;
            color: white;
            text-shadow: 3px 3px 3px #000000;
        }

            #NavigationButtons a:hover {
                background: rgba(255, 81, 0,0.7);
            }

    footer {
        background-image: url(../../Content/backgroundfooter.png);
        min-width: 100%;
        min-height: 50px;
        text-align: center;
    }

    #CopyrightRow {
        font-family: Arial, Helvetica, sans-serif;
        color: white;
        font-size: 20px;
        text-align: center;
        justify-content: center;
        min-width: 100%;
    }

    #FooterButtons a {
        font-family: Arial, Helvetica, sans-serif;
        color: white;
        font-size: 20px;
        border: 2px solid #FF7700;
        height: 50px;
        padding: 7px;
        text-shadow: 3px 3px 3px #000000;
        text-decoration: none;
    }
</style>