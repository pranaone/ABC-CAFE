@model CafateriaSystem.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-4" style=" text-align:left; font-size: larger; font-family: Arial, Helvetica, sans-serif; background-color: rgba(242, 242, 242,0.3)">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <strong>Create Staff User</strong>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label> Name </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label> Password </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label> Role </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.user_role,
                                 new List<SelectListItem>
                                 {
                            new SelectListItem { Value = "Admin" , Text = "Admin" },
                            new SelectListItem { Value = "Chef" , Text = "Chef" },
                            new SelectListItem { Value = "Driver" , Text = "Driver"}}, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.user_role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label> Contact Number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label> Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label> Location </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label> Availability </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.status,
                                 new List<SelectListItem>
                                 {
                            new SelectListItem { Value = "Available" , Text = "Available" },
                            new SelectListItem { Value = "Un-Available" , Text = "Un-Available"}}, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a href="@Url.Action("AdminUserPanel", "Users")" class="btn btn-primary"> Back </a>
            </div>
        </div>
    </div>
    }
<br />
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
