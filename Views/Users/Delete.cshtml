@model CafateriaSystem.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6" style=" text-align:left; font-size: larger; font-family: Arial, Helvetica, sans-serif; background-color: rgba(242, 242, 242,0.3)">
    <hr />
    <strong> Are you sure you want to delete this user? </strong>
    <hr />
    <div>
        <dl class="dl-horizontal">

            <dd>
                <strong> Name : </strong> @Html.DisplayFor(model => model.name)
            </dd>

            <dd>
                <strong> Role : </strong> @Html.DisplayFor(model => model.user_role)
            </dd>

            <dd>
                <strong> Contact : </strong> @Html.DisplayFor(model => model.phone)
            </dd>

            <dd>
                <strong> Availability : </strong> @Html.DisplayFor(model => model.status)
            </dd>

        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("AdminUserPanel", "Users")" class="btn btn-primary"> Back </a>
        </div>
    }
    <br />
</div>
